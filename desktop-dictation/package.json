{
  "name": "desktop-dictation",
  "version": "1.0.0",
  "description": "Cross-platform voice dictation tool with global hotkey support",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "dictation",
    "voice",
    "asr",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "canvas": "^3.2.0",
    "form-data": "^4.0.4",
    "mic-recorder-to-mp3": "^2.2.2",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.copywriter.dictation",
    "productName": "Desktop Dictation",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "dir"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
